<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.gmail.npnster.first_project.UserDetailActivity$PlaceholderFragment" >

   
    
           <ImageView
             android:id="@+id/user_profile_icon"
             android:layout_width="64dp"
             android:paddingRight="5dp"
             android:layout_height="64dp" />
   
          
           <TextView
             android:id="@+id/user_profile_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textAppearance="?android:attr/textAppearanceMedium" />
           
               <TextView
        android:id="@+id/user_profile_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />
       
       <TextView
        android:id="@+id/user_profile_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />
       

     
     
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
     
 
        
      <ListView
        android:id="@+id/user_profile_microposts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp" >
 
    </ListView>
      


</LinearLayout>
